<h1 class = "mt-3"><strong><%= @property.title%></strong></h1>
  <br>

<div class = "d-flex justify-content-end mb-2">
  <%= link_to "#", class: "me-3" do%>
    <i class="fa-solid fa-heart icon-size"></i>
  <% end %>
  <%= link_to "#", class: "" do %>
    <i class="fa-solid fa-message icon-size"></i>
  <% end %>
</div>
<div class="d-flex card-infos justify-content-between">
  <br>

  <div>
    <h2><strong>Address:</strong> <%= @property.address %></h2>
    <h2><strong>Summary:</strong> <%= @property.summary %></h2>
    <h2><strong>Price:</strong> <%= @property.price_per_night %>$</h2>
    <h2><strong>Number of Rooms:</strong> <%= @property.number_of_rooms %> room</h2>
  </div>

  <%= image_tag asset_path('Amsterdam_3.jpg'), class:"show-img ms-5" %>
</div>

<div class = "d-flex mt-3 align-items-center justify-content-end">
  <%#= link_to "Send Request", "#", class: "btn btn-primary me-2"%>
  <%= link_to "Book", "#", class: "btn button-show btn-primary"%>
</div>
